<!DOCTYPE html>
<html>
<head>
    <style>

        .main_page {
            width: 100%;
            display: flex;
            padding-top: 70px;
            padding-bottom: 70px;
            background-color: #E7E8EB;
        }
        .email_temp_con {
            display: block !important;
            width: 70%;
            margin: auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
        }

        .title {
            font-size: 2.2em;
        }

        .description {
            font-size: 1.1em;
            max-width: 500px;
        }

        .center_text {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .centered_div {
            margin: auto;
            text-align: center;

        }

        .button_link {
            background-color: #057CE0;
            color: #ffffff !important;
            padding: 20px;
            padding-right: 30px;
            padding-left: 30px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            
        }

        @media screen and (max-width: 1500px) {

        }

        @media screen and (max-width: 1400px) {

        }

        @media screen and (max-width: 1100px) {
            .email_temp_con {
                width: 90%;
            }
        }

        @media screen and (max-width: 900px) {

        }
        @media screen and (max-width: 800px) {
            .email_temp_con {
                width: 100%;
            }
        }

        @media screen and (max-width: 500px) {

        }
    </style>
</head>
<body>
    <div class="main_page">
        <div class="email_temp_con">
            <br>
            <br>
            <br>
            <br>
            <div class = "center_text">
                <div class = "centered_div"> 
                    <h1 class = "title">{{title}}</h1>
                    <br>
                    <p class = "description">{{description}}</p>
                    <br>
                    <br>
                    <br>
                    <a class = "button_link" href="{{button_link}}">{{button_text}}</a>
                </div>
            </div>
            <br>
            <br>
            <br>
            <br>
        </div>
    </div>
</body>
</html>
